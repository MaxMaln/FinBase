<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="146dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription,ImageContrastCheck">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_weight="1"
            android:fontFamily="@font/bahnschrift"
            android:text="FinBase"
            android:textSize="48sp"
            tools:ignore="HardcodedText,InefficientWeight" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bahnschrift"
        android:text="Финансирование Кредитование Страхование"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:ignore="HardcodedText,InefficientWeight" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/authorizationbutton"
        android:layout_width="276dp"
        android:layout_height="61dp"
        android:layout_marginTop="300sp"
        android:background="@xml/authorizationbutton_style"
        android:elevation="6dp"
        android:fontFamily="@font/bahnschrift"
        android:stateListAnimator="@null"
        android:text="Авторизация"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrationbutton"
        android:layout_width="276dp"
        android:layout_height="61dp"
        android:layout_marginTop="10sp"
        android:background="@xml/registrationbutton_style"
        android:fontFamily="@font/bahnschrift"
        android:text="Регистрация"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923"
        tools:ignore="HardcodedText,TextContrastCheck" />
</android.widget.LinearLayout>
