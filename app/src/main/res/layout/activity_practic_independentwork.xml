<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PracticIndependentwork">

    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bahnschrift"
        android:padding="5sp"
        android:text="Задание"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bahnschrift"
        android:padding="10sp"
        android:textAlignment="center"
        android:textSize="22sp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Введите ответ"
        android:inputType="text"
        tools:ignore="Autofill,HardcodedText,MissingConstraints,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/continuue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@xml/continuebutton_style"
        android:fontFamily="@font/bahnschrift"
        android:text="Далее"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText,MissingConstraints" />


</LinearLayout>